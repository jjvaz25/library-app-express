<h1>{{title}}</h1>
<form action="" method="POST">
  <div class="form-group">
    <label for="first_name">First Name: </label>
    <input class="form-control" type="text" id="first_name" 
      placeholder='First name (Christian)' name='first_name' required='true'
      value={{check_undefined author author.first_name}}
    >
    <label for="family_name">Family Name: </label>
    <input class="form-control" type="text" id="family_name" 
      placeholder='Family name (surname)' name='family_name' required='true'
      value={{check_undefined author author.family_name}}
    >
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth: </label>
    <input class="form-control" type="date" id="date_of_birth" 
      placeholder='Family name (surname)' name='date_of_birth'
      value={{check_undefined author author.date_of_birth}}
    >

    <label for="date_of_death">Date of death: </label>
    <input class="form-control" type="date" id="date_of_death" 
      placeholder='Family name (surname)' name='date_of_death'
      value={{check_undefined author author.date_of_death}}
    >
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
  <ul>
    {{#each errors}}
      {{this.msg}}
    {{/each}}
  </ul>
{{/if}}