
<h1>{{title}} {{book.title}}</h1>

<p><strong>Author:</strong>
  <a href={{book.author.url}}>{{book.author.name}}</a>
</p>
<p><strong>Summary:</strong> {{book.summary}}</p>
<p><strong>ISBN:</strong> {{book.isbn}}</p>
<p><strong>Genre:</strong>&nbsp;
  {{#each book.genre}}
    <a href={{this.url}}>{{this.name}}</a>
    {{#unless @last}},{{/unless}}
  {{/each}}
</p>

{{#if book_instances.length}}
  <p><strong>Delete the following copies of the book before attempting to delete this book.</strong></p>
  <div style="margin-left:20px;margin-top:20px">
    <h4>Copies</h4>
    <dl>
      {{#each book_instances}}
        <dt>
          <a href={{this.url}}>{{this._id}}</a>
        </dt>
        <dd>{{this.imprint}}</dd>
        <dd>{{check_status this}}</dd>
      {{/each}}
    </dl>
  </div>
{{else}}
  <p>Do you really want to delete this Book?</p>
  <form action="" method="POST">
      <div class="form-group">
          <input id="bookid" class="form-control" type="hidden" name="bookid" required="true" value="{{book._id}}">
      </div>
      <button class="btn btn-primary" type="submit">Delete</button>
  </form>
{{/if}}
