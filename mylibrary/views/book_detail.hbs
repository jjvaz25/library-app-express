<h1>Title: {{book.title}}</h1>

<p><strong>Author:</strong>
    <a href={{book.author.url}}>{{book.author.name}}</a>
</p>
<p><strong>Summary: </strong>
  {{book.summary}}
</p>
<p><strong>ISBN: </strong>
  {{book.isbn}}
</p>
<p><strong>Genre: </strong>
  {{#each book.genre}}
    <a href={{this.url}}>{{this.name}}</a>{{#unless @last}},{{/unless}}
  {{/each}}
</p>
<div style="margin-left:20px;margin-top:20px">
  <h4>Copies</h4>
  {{#if book_instances}}
    {{#each book_instances}}
      <hr>
      {{check_status this}}
      <p><strong>Imprint: </strong> {{this.imprint}}</p>
      <p><strong>Id: </strong>
        <a href={{this.url}}>{{this.id}}</a>
      </p>
    {{/each}}
  {{else}}
    There are no copies of this book.
  {{/if}}
</div>