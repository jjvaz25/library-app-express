<h1>Genre: {{genre.name}}</h1>
<div style="margin-left:20px;margin-top:20px">
  <h4>Books</h4>
  <dl>
    {{#if genre_books}}
      {{#each genre_books}}
        <dt>
          <a href={{this.url}}>{{this.title}}</a>
          <dd>{{this.summary}}</dd>
        </dt>
      {{/each}}
    {{else}}
      <p>This genre has no books</p>
    {{/if}}
  </dl>
</div>
<hr>
<p>
  <a href={{concatenate_strings genre.url '/delete'}}>Delete Genre</a>
</p>
<p>
  <a href={{concatenate_strings genre.url '/update'}}>Update Genre</a>
</p>